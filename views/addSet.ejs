<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Set</title>
    <link rel="stylesheet" href="/css/main.css" />

    <style>
      .top-right-menu {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px;
      }

      /* Add this style to ensure the grid layout */
    .grid {
      display: grid;
    }
    </style>
  </head>
  <body tabindex="-1">
    <%- include('partials/navbar', {page: '/lego/addSet'}) %>

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Add Set</h1>

            <br>

            <p> Use the below form to add a new Lego Set to the collection</p>

            <br>
            
            <form action="/lego/addSet" method="POST">

              
              <div class="form-control">
                <label for="name" class="label">
                  Name
                  <span class="label-required">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="input"
                />
              </div>

              <!-- Year -->
              <div class="form-control">
                <label for="year" class="label">
                  Year
                  <span class="label-required">*</span>
                </label>
                <input
                  type="number"
                  id="year"
                  name="year"
                  required
                  class="input"
                />
              </div>

              <!-- Number of Parts -->
              <div class="form-control">
                <label for="num_parts" class="label">
                  Number of Parts
                  <span class="label-required">*</span>
                </label>
                <input
                  type="number"
                  id="num_parts"
                  name="num_parts"
                  required
                  class="input"
                />
              </div>

              <!-- Image URL -->
              <div class="form-control">
                <label for="img_url" class="label">
                  Image URL
                  <span class="label-required">*</span>
                </label>
                <input
                  type="url"
                  id="img_url"
                  name="img_url"
                  required
                  class="input"
                />
              </div>

              <!-- Theme -->
              <div class="form-control">
                <label for="theme_id" class="label">
                  Theme
                  <span class="label-required">*</span>
                </label>
                <select id="theme_id" name="theme_id" required class="input">
                  <% themes.forEach(theme => { %>
                    <option value="<%= theme.id %>"><%= theme.name %></option>
                  <% }) %>
                </select>
              </div>

              <!-- Set Number -->
              <div class="form-control">
                <label for="set_num" class="label">
                  Set Number
                  <span class="label-required">*</span>
                </label>
                <input
                  type="text"
                  id="set_num"
                  name="set_num"
                  required
                  class="input"
                />
              </div>

              <div class="form-control">
                <button type="submit" class="btn btn-primary">Add Set</button>
              </div>
            </form>
            

          </div>
        </div>
        </div>
      </div>
    </div>
  </body>
</html>
