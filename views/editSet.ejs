<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Set</title>
  <link rel="stylesheet" href="/css/main.css" />

  <style>

    /* Update Set Button (Green) */
     .btn-success {
        background-color: #28a745; /* Green color */
        color: #fff; /* White text */
     }

       /* Delete Set Button (Red) */
         .btn-error {
           background-color: #dc3545; /* Red color */
  
          }

  </style>
  
</head>

<body tabindex="-1">
  <%- include('partials/navbar', {page: '' }) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set</h1>

          <br>

          <p>Edit the details of the Lego Set: <%= set.name %></p>

          <br>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">

            <!-- Edit Set Form -->
            <form action="/lego/editSet" method="POST">

              <!-- Name -->
              <div class="form-control">
                <label for="name" class="label">
                  Name
                  <span class="label-required">*</span>
                </label>
                <input type="text" id="name" name="name" required class="input" value="<%= set.name %>" />
              </div>

              <!-- Year -->
              <div class="form-control">
                <label for="year" class="label">
                  Year
                  <span class="label-required">*</span>
                </label>
                <input type="number" id="year" name="year" required class="input" value="<%= set.year %>" />
              </div>

              <!-- Number of Parts -->
              <div class="form-control">
                <label for="num_parts" class="label">
                  Number of Parts
                  <span class="label-required">*</span>
                </label>
                <input type="number" id="num_parts" name="num_parts" required class="input" value="<%= set.num_parts %>" />
              </div>

              <!-- Image URL -->
              <div class="form-control">
                <label for="img_url" class="label">
                  Image URL
                  <span class="label-required">*</span>
                </label>
                <input type="url" id="img_url" name="img_url" required class="input" value="<%= set.img_url %>" />
              </div>

              <!-- Theme -->
              <div class="form-control">
                <label for="theme_id" class="label">
                  Theme
                  <span class="label-required">*</span>
                </label>
                <select id="theme_id" name="theme_id" required class="input">
                  <% themes.forEach(theme => { %>
                    <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                      <%= theme.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <!-- Set Number (Read-only) -->
              <div class="form-control">
                <label for="set_num" class="label">
                  Set Number
                  <span class="label-required">*</span>
                </label>
                <input type="text" id="set_num" name="set_num" class="input cursor-not-allowed" readonly value="<%= set.set_num %>" />
              </div>

              <!-- Submit Button -->
              <div class="form-control">
                <button type="submit" class="btn btn-success">Update Set</button>
              </div>

            </form> 

              <!-- Delete Set Button -->
              <div class="form-control">
                <button id="deleteSetBtn" class="btn btn-error">Delete Set</button>
            </div>
            
            <script>
                document.getElementById('deleteSetBtn').addEventListener('click', function() {
                    window.location.href = "/lego/deleteSet/<%= set.set_num %>";
                });
            </script>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</body>

</html>
